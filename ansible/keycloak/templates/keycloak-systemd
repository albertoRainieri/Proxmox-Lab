[Unit]
Description=Keycloak Server
After=network-online.target
Wants=network-online.target
AssertFileIsExecutable=/opt/keycloak/bin/kc.sh

[Service]
User=keycloak
Group=keycloak
WorkingDirectory=/home/keycloak
ExecStart=/opt/keycloak/bin/kc.sh start --http-port=8888 --http-enabled=true --hostname-backchannel-dynamic=true --hostname=https://keycloak.devops.lab:8443 --hostname-admin=https://keycloak.http.devops.lab:8443
Restart=always
EnvironmentFile=-/etc/default/keycloak
[Install]
WantedBy=multi-user.target