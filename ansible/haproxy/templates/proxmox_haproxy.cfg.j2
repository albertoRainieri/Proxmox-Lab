global
	log /dev/log	local0
	log /dev/log	local1 notice
	chroot /var/lib/haproxy
	stats socket /run/haproxy/admin.sock mode 660 level admin
	stats timeout 30s
	user haproxy
	group haproxy
	daemon

	# Default SSL material locations
	ca-base /etc/ssl/certs
	crt-base /etc/ssl/private

	# See: https://ssl-config.mozilla.org/#server=haproxy&server-version=2.0.3&config=intermediate
        ssl-default-bind-ciphers ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-ECDSA-CHACHA20-POLY1305:ECDHE-RSA-CHACHA20-POLY1305:DHE-RSA-AES128-GCM-SHA256:DHE-RSA-AES256-GCM-SHA384
        ssl-default-bind-ciphersuites TLS_AES_128_GCM_SHA256:TLS_AES_256_GCM_SHA384:TLS_CHACHA20_POLY1305_SHA256
        ssl-default-bind-options ssl-min-ver TLSv1.2 no-tls-tickets

defaults
	log	global
	mode	http
	option	dontlognull
  timeout connect 5000
  timeout client  50000
  timeout server  50000
	errorfile 400 /etc/haproxy/errors/400.http
	errorfile 403 /etc/haproxy/errors/403.http
	errorfile 408 /etc/haproxy/errors/408.http
	errorfile 500 /etc/haproxy/errors/500.http
	errorfile 502 /etc/haproxy/errors/502.http
	errorfile 503 /etc/haproxy/errors/503.http
	errorfile 504 /etc/haproxy/errors/504.http

listen rancher-internal-9345
  bind *:9345
  mode tcp
  balance roundrobin
  server common 192.168.2.10:9345 verify none check

listen rancher-api-6444
  bind *:6444
  mode tcp
  http-request set-header X-Url-Scheme: https
  http-request set-header X-Forwarded-Host %[req.hdr(Host)]
  balance roundrobin
  server common 192.168.2.10:6444 verify none check

listen openshift-api-6443
  bind *:6443
  mode tcp
  http-request set-header X-Url-Scheme: https
  http-request set-header X-Forwarded-Host %[req.hdr(Host)]
  balance roundrobin
  server common 192.168.2.10:6443 verify none check

listen openshift-22623
    bind :22623
    mode tcp
    http-request set-header X-Url-Scheme: https
    http-request set-header X-Forwarded-Host %[req.hdr(Host)]
    balance roundrobin
    server common 192.168.2.10:22623 verify none check

listen git_ssh
    bind *:2223
    mode tcp
    log-format "%ci:%cp [%t] %ft %b/%s %Tw/%Tc/%Tt %B %ts %ac/%fc/%bc/%sc/%rc %sq/%bq dst:%[var(sess.dst)] "
    tcp-request content set-var(sess.dst) ssl_fc_sni
    http-request set-header X-Forwarded-Host %[req.hdr(Host)]
    server ocp-w-2 192.168.2.212:30022 verify none check

listen http-8080
  mode http
  bind *:8080
  http-request set-header X-Url-Scheme: https
  http-request set-header X-Forwarded-Host %[req.hdr(Host)]
  http-request replace-header Host ([^:]+) \1
  balance roundrobin
  server common 192.168.2.10:8080 verify none check

listen http-8081
  mode http
  bind *:8081
  http-request set-header X-Url-Scheme: https
  http-request set-header X-Forwarded-For %[req.hdr(Host)]
  http-request set-header X-Forwarded-Port %[dst_port]
  balance roundrobin
  server common 192.168.2.10:8082 verify none check

listen http-8083
  mode http
  bind *:80
  balance roundrobin
  server openshift-1 ocp-cp-1.devops.lab:80 verify none check
  server openshift-2 ocp-cp-2.devops.lab:80 verify none check
  server openshift-3 ocp-cp-3.devops.lab:80 verify none check

listen https-443
  mode tcp
  bind *:443
  http-request set-header X-Url-Scheme: https
  http-request set-header X-Forwarded-Host %[req.hdr(Host)]
  balance roundrobin
  server common 192.168.2.10:443 verify none check

listen keycloak
  mode http
  bind *:8880
  bind *:8443 ssl crt /usr/local/share/ca-certificates/keycloak.site.pem
  http-request set-header X-Forwarded-Host %[req.hdr(Host)]
  http-request replace-header Host ([^:]+) \1
  balance roundrobin
  server common 192.168.2.10:8888 verify none check
